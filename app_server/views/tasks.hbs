
<div class="row mx-1">
  <div class ="col-sm-1 col-lg-2">
  </div>
  <div class ="col-sm-10 col-lg-8">
    <h2 class="my-4">Task list: everyday</h2>
    <div class="row">
      <div class="col-lg-1 col-9">
        <button type="button" class="btn btn-outline-primary my-3">Add task</button>
      </div>
      <div class="col-lg-2 col-2">
        <button type="button" class="btn btn-outline-danger my-3">Edit</button>
      </div>
    </div>
    <table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Description</th>
      <th scope="col">Date</th>
      <th scope="col">Done</th>
    </tr>
  </thead>
  <tbody>
    {{#each tasks as |task|}}
    <tr>
      <th scope="row">{{task.number}}</th>
      <td>{{task.description}}</td>
      <td>{{task.date}}</td>
      <td>
        {{#if task.done}}
        <span class="badge badge-success">YAY</span>
        {{else}}
        <button type="button" class="btn btn-outline-success">DONE</button>
        {{/if}}
      </td>
    </tr>
    {{/each}}

  </tbody>
</table>


  </div>
</div>
